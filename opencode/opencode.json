{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "oh-my-opencode",
    "opencode-antigravity-auth@1.1.2",
    "opencode-openai-codex-auth"
  ],
  "model": "anthropic/claude-opus-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "provider": {
    "anthropic": {
      "name": "Anthropic",
      "api": "anthropic",
      "models": {
        "claude-opus-4-5": {
          "name": "Claude Opus 4.5",
          "limit": {
            "context": 200000,
            "output": 8192
          }
        },
        "claude-haiku-4-5": {
          "name": "Claude Haiku 4.5",
          "limit": {
            "context": 200000,
            "output": 8192
          }
        }
      }
    },
    "google": {
      "name": "Google (Antigravity OAuth)",
      "api": "antigravity",
      "models": {
        "gemini-3-pro-high": {
          "name": "Gemini 3 Pro (High)",
          "options": {
            "thinking_level": "high"
          },
          "limit": {
            "context": 1000000,
            "output": 8192
          }
        },
        "gemini-3-pro-medium": {
          "name": "Gemini 3 Pro (Medium)",
          "options": {
            "thinking_level": "medium"
          },
          "limit": {
            "context": 1000000,
            "output": 8192
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash",
          "limit": {
            "context": 1000000,
            "output": 8192
          }
        }
      }
    },
    "openai": {
      "name": "OpenAI (ChatGPT Plus/Pro)",
      "api": "openai-codex",
      "models": {
        "gpt-5.2": {
          "name": "GPT-5.2",
          "limit": {
            "context": 1048576,
            "output": 32768
          }
        }
      }
    }
  }
}
